<script>
  function validate_receiver()
   {
    var id=document.getElementById("id");
    var name=document.getElementById("name");
    var vmale=document.receiver_form.male;
    var vfemale=document.receiver_form.female;
    var vother=document.receiver_form.other;
    var dob=document.getElementById("dob");
    var date=document.getElementById("date");
    var qnty=document.getElementById("qnty");
    var contact=document.getElementById("contact");
    var emial=document.getElementById("email").value;
    var b=document.getElementById("blood");
    var sample_no=document.getElementById("sample_no");
    var rid=document.getElementById("rid");
    var mid=document.getElementById("mid");
    var pin=document.getElementById("pin");
    var address=document.getElementById("address");

      if(id.value.trim() == ""){
        alert("ID is required");
        id.focus();
        return false;
      }
      if(name.value.trim() == "" || name.value.length<2){
        alert("Enter your name");
        name.focus();
        return false;
      }

      var x=0;
       if(vmale.checked)
           x++;
       if(vfemale.checked)
           x++;
       if(vother.checked)
           x++;
       if(x==0)
       {
           alert("Select Male / Female");
           return false;
       }
      if(dob.value.trim()==""){
            alert("Date of registration is required");
            dob.focus();
            return false;
            var d;
            d=new Date();
            dob=d.toISOString();
        }
        if(date.value.trim()==""){
            alert("Date of registration is required");
            date.focus();
            return false;
            var d;
            d=new Date();
            date=d.toISOString();
        }
        if(qnty.value.trim()=="" || qnty.value>10){
            alert("Quantity of blood received is required");
              qnty.focus();
              return false;
        }
       if(contact.value.trim()=="")
       {
             alert("Phone number is required");
             contact.focus();
             return false;
       }
       if(contact.value.search(/^[7-9][0-9]{9}$/)!=0)
         {
           alert("Please once check your contact number");
           contact.focus();
             return false;
         }
         if(emial.trim()=="")
         {
             alert("email is required");
             email.focus();
             return false;
         }
        var regx=/^([a-z 0-9\.-]+)@([a-z0-9]+).([a-z]{2,8})(.[a-z]{2-8})?$/;
        if(regx.test(email))
        {
           alert("Please, once check your email");
           emial.focus();
           return false;
        }  
         if(b.value == "0")
           {
                 alert('Select your blood group from the list');
                 return false;
           }
        if(sample_no.value.trim() == ""){
        alert("Blood sample number is required");
        sample_no.focus();
        return false;
        }
        if(rid.value.trim() == ""){
          alert("Registration staff ID is required");
          rid.focus();
          return false;
        }
        if(mid.value.trim() == ""){
          alert("Blood processing manger ID is required");
          mid.focus();
          return false;
        }
        if(b.value == "0")
        {
            alert('Select your blood group from the list');
            return false;
        }
        if(pin.value.trim()=="" || pin.value.length<6 || pin.value.length>6)
         {
             alert("pin code is required");
             pin.focus();
             return false;
         }
         if(address.value.trim()=="")
         {
             alert("address is required");
             address.focus();
             return false;
         }
    }
</script>
